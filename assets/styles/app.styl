@import 'global'
@import 'page'
@import 'work'

body
  //edit()
  position relative
  diplay block
  margin 0
  padding 0
  background $lite-gray
  font-family Range
  font-size 14px
  
  header
    center(1140px)
    padding 48px 0 24px
    
    h1
      margin 24px 0
      text-align center
      font-size 1rem
      color $black
      
    nav
      center(300px)
      padding 24px 0
      
      ol
        margin 0
        padding 0
        list-style none
        
        li
          span(1/4)
          a
            display block
            text-align center
            color $gray
            text-decoration none
            
            &:hover
              color $teal
              text-decoration underline
            
            &.selected
              color $teal
              text-decoration underline
            
            &.disabled
              text-decoration line-through
              pointer-events none
              color lighten($gray, 50%)
  
  footer
    center(1140px)
    padding 0 24px 12px
    text-align center
    
    p
      font-size 0.789rem
      color $gray