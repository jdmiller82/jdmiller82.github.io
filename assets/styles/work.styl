  #work
  display table
  center(1140px)
  margin-bottom 48px
  
  >.wrapper
    display table-cell
    text-align center
    vertical-align middle
    
    >ul
      margin 0
      padding 0 12px
      list-style none
      
      >li
        display inline-block
        margin 14px 12px 15px 
        width 300px
        background white
        text-align left
        transition: 0.25s ease-in-out;
        
        &:hover
          box-shadow 0 10px 10px lighten($dark-gray, 80%)
        
        .image
          width 300px
          height 200px
          padding 0
          overflow hidden
          
          a
            position relative
            display block
            
            img
              position relative
          
        .details
          padding 24px
          
          h2
            margin 0 0 12px
            padding 0
            
            a
              color $gray
              text-decoration none
              
              &:hover
                color $teal
            
          p
            margin 0
            padding 0
            color lighten($gray, 50%)
            
            a
              color $gray
              text-decoration underline
              
              &:hover
                color $teal
                text-decoration none